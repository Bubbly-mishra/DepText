<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kuu"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">


        <TextView
            android:id="@+id/first"
            android:layout_width="233dp"
            android:layout_height="54dp"
            android:layout_marginLeft="82dp"
            android:layout_marginTop="120dp"
            android:gravity="center_horizontal"
            android:soundEffectsEnabled="false"
            android:text="@string/depreciation"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/seacond"
            android:layout_width="382dp"
            android:layout_height="765dp"
            android:layout_below="@id/first"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal"
            android:text="@string/aurkuch"
            android:textAlignment="textStart"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/third"
            android:layout_width="379dp"
            android:layout_height="264dp"
            android:layout_below="@id/seacond"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            android:text="@string/_2kuch"
            android:textAlignment="textStart"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="RtlCompat" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="505dp"
            android:layout_below="@id/third"
            android:gravity="center_horizontal"
            android:text="@string/_3kuch"
            android:textAlignment="textStart"
            android:textSize="20sp"
            tools:ignore="RtlCompat" />

        <Button
            android:id="@+id/btn"
            android:layout_width="340dp"
            android:layout_height="44dp"
            android:layout_alignBottom="@id/seacond"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded"
            android:layout_marginLeft="17dp"
            android:gravity="center"
            android:text="Straight Line method"
            android:textAllCaps="false" />

        <Button
            android:layout_width="370dp"
            android:layout_height="47dp"
            android:layout_alignBottom="@id/btn"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded2"
            android:text="Diminishing Balance Method"
            android:textAllCaps="false"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>

</ScrollView>
